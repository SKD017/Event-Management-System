<h3> Edit Events Details</h3>

{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}
{{#each rows}}
<form method="post" action="/editUser/{{this.ID}}" autocomplete="false">

<div class="form-group">
    <label for="Event">Event</label>
    <input type="text" name="Event" value="{{this.EVENT}}">
</div>

<div class="form-group">
    <label for="Date">Date</label>
    <input type="date" name="Date" value="{{this.DATE}}">
</div>

{{!-- <div class="form-group">
    <label for="city">City</label>
    <input type="text" name="city" value="{{this.CITY}}">
</div> --}}

<div class="form-group">
    <button type="submit">Save Details</button>
    <a href="/">View All</a>
</div>

</form>
{{/each}}